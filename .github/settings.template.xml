<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <servers>
        <server>
            <id>github</id>
            <username>LmDiv</username>
            <password>${CCLOUD_ACTION_TOKEN}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>github</id>
            <properties>
                <docker.auth.username>LmDiv</docker.auth.username>
                <docker.auth.password>${CCLOUD_ACTION_TOKEN}</docker.auth.password>
            </properties>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases><enabled>true</enabled></releases>
                    <snapshots><enabled>false</enabled></snapshots>
                </repository>
                <repository>
                    <id>github</id>
                    <name>GitHub LmDiv Apache Maven Packages</name>
                    <url>https://maven.pkg.github.com/LmDiv/cicd-ccloud-action</url>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>